# Copy this file to `.env` and adjust the values for your environment.

# --- Grants.gov export settings -------------------------------------------------
# Maximum records to request in a single export call (default: 5000)
GRANTS_GOV_ROWS=5000
# Optional keyword/filters (leave blank to disable)
GRANTS_GOV_QUERY=
GRANTS_GOV_CFDA=
GRANTS_GOV_AGENCIES=
GRANTS_GOV_ELIGIBILITIES=
GRANTS_GOV_FUNDING_CATEGORIES=
GRANTS_GOV_FUNDING_INSTRUMENTS=
GRANTS_GOV_DATE_RANGE=
# Pipe-delimited statuses (e.g., "posted|forecasted")
GRANTS_GOV_OPP_STATUSES=forecasted|posted
# Request timeout in seconds
GRANTS_GOV_TIMEOUT=60

# Keyword filtering behaviour
GRANTS_KEYWORDS=research,education,innovation,technology,infrastructure
GRANTS_KEYWORD_THRESHOLD=1
GRANTS_INCLUDE_FORECAST=false
GRANTS_GOV_LOOKBACK_DAYS=90

# --- Gmail notifications --------------------------------------------------------
GMAIL_TOKEN_FILE=path/to/token.json
GMAIL_NOTIFY_RECIPIENTS=recipient@example.com
GMAIL_SENDER_EMAIL=
GMAIL_SUBJECT=GrantWatch: new opportunities posted
GMAIL_USER_AGENT=

# --- PostgreSQL connection ------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=grantwatch
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres

